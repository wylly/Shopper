<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="personal.bw.shopper">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".shoppinglists.ShoppingListsActivity"
                android:theme="@style/AppTheme.OverlapSystemBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".productlist.shoppinglist.existingshoppinglist.ExistingShoppingListDetailsActivity"  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".productlist.shoppinglist.newshoppinglist.NewShoppingListDetailsActivity"  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".productlist.housestock.HousestockActivity"  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".productdetails.ProductDetailsActivity"  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".housestockproduct.HousestockProductDetailsActivity"  android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>